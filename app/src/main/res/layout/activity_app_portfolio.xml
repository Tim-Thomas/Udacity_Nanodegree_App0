<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".appPortfolio"
    android:background="@color/BackgroundBlue"
    android:clickable="false">

    <TextView android:text="@string/my_title" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:gravity="center" android:textSize="24sp"
        android:autoText="false"
        android:id="@+id/mainHeading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp" />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                style="@style/buttonStyle"
                android:text="@string/media_streamer"
                android:id="@+id/button"
                android:onClick="media_streamer" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        <Button
            style="@style/buttonStyle"
            android:text="@string/super_duo1"
            android:id="@+id/button2"
            android:onClick="super_duo1" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        <Button
            style="@style/buttonStyle"
            android:text="@string/super_duo2"
            android:id="@+id/button3"
            android:onClick="super_duo2" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                style="@style/buttonStyle"
                android:text="@string/ant_terminator"
                android:id="@+id/button4"
                android:onClick="ant_terminator" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                style="@style/buttonStyle"
                android:text="@string/materialize"
                android:id="@+id/button5"
                android:onClick="materialize" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                style="@style/buttonStyle"
                android:text="@string/capstone"
                android:id="@+id/button6"
                android:backgroundTint="@color/CapstoneMagenta"
                android:onClick="capstone" />
        </TableRow>
</TableLayout>

</RelativeLayout>
